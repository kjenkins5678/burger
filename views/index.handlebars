
<div class="container">
  <div class="jumbotron text-center">
      <h1>Eat Da Burger</h1>
  </div>

  <div class="row">
    <div class="col-12 text-center">
      <h3>Add a Burger</h3>
      <form class="create-form">

        <div class="form-group">
          <label for="bu">Burger Name:</label>
          <input type="text" id="bu" name="name">
        </div>

        {{!-- <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured<br>
          <input type="radio" name="devoured" value="0"> Not Devoured
        </div> --}}

        <button type="submit" class="btn btn-secondary btn-sm">Add Burger</button>
      </form>

    </div>
  </div>

  <div class="row mt-4">
    <div class="col-6">
      <h4>Waiting to Be Devoured</h4>

        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>

    </div>
    <div class="col-6">
      <h4>Already Eaten</h4>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>

      
    </div>
  </div>
</div>